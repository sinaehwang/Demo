<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hsn.exam.demo.repository.MemberRepository">

	<insert id="join">
		INSERT INTO `member` SET
		regDate = NOW(),
		updateDate=NOW(),
		loginId = #{loginId},
		loginPw = #{loginPw},
		`name` =
		#{name},
		nickname = #{nickname},
		cellphoneNo = #{cellphoneNo},
		email =
		#{email}

	</insert>

	<select id="getLastInsertId" resultType="int">
		SELECT LAST_INSERT_ID()
	</select>

	<select id="getMember" resultType="Member">
		SELECT * FROM `member`
		WHERE id
		= #{id}
	</select>

	<select id="isDuplicateLoginId" resultType="int">
		SELECT COUNT(*) FROM
		`member`
		WHERE loginId = #{loginId}
	</select>
	
	<select id="getDuplecateEmailAndName" resultType="int">
		SELECT COUNT(*) FROM
		`member`
		WHERE name = #{name}
		AND email = #{email}
	</select>
	
	<select id="FoundMemberByLoginId" resultType="Member">
		SELECT*FROM `member`
		WHERE `member`.loginId = #{loginId}
	</select>

</mapper>